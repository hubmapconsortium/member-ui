# App name and deployment URI
FLASK_APP_NAME = 'HuBMAP Member Registration And Profile'

# Shown for local development, works regardless the trailing slash /
FLASK_APP_BASE_URI = 'http://localhost:5000'

# Flask app session key
SECRET_KEY = ''

# Globus app client ID and secret
GLOBUS_APP_ID = ''
